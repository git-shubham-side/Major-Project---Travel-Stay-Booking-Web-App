<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WanderLust</title>
  </head>
  <body>
    <%layout("layouts/boilerplate")%>
    <h1>All Listings</h1>
    <!-- <form action="/listings/new" method="get">
      <button type="submit">Create New Listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <% for(let list of alllist){ %>
      <a href="/listings/<%=list._id%>" class="listing-link">
        <div class="card col listing-card">
          <img src="<%=list.image.url%>" class="card-img-top" alt="Image" />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%=list.title%></b>
             <hr>
              <%-list.price.toLocaleString("en-IN",{style:"currency",currency:"INR"})%>
              / night
            </p>
          </div>
        </div>
      </a>
      <% }%>
    </div>
  </body>
</html>
